cmake_minimum_required(VERSION 3.10)
project(sensor_handler)

# C++17 표준 사용
set(CMAKE_CXX_STANDARD 17)
# set(CMAKE_BUILD_TYPE "Release")


# Find dependencies
find_package(OpenCV REQUIRED)
find_package(CUDA REQUIRED)
find_package(ZED 3 REQUIRED)

# link_directories(
#   "/usr/local/zed/lib"  
#   )

include_directories(
  ${PROJECT_SOURCE_DIR}/include
  ${OpenCV_INCLUDE_DIRS}
  ${CUDA_INCLUDE_DIRS}
  ${ZED_INCLUDE_DIRS}
  # "/usr/local/zed/include"  
)

#Declare C++ executable
add_executable(zed_camera_handler src/zed_camera_handler.cpp)

# Link dependencies
target_link_libraries(zed_camera_handler
  ${OpenCV_LIBS}
  ${CUDA_LIBRARIES}
  ${ZED_LIBRARIES}
)

install(TARGETS
  zed_camera_handler
  DESTINATION lib/${PROJECT_NAME}
)